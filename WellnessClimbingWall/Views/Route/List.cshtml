@model RoutesListViewModel

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/tablesort.css" />
</head>


<style>
    thead tr td{
        text-align:center;
    }
    thead tr th:hover {
        background-color: #07889b;
    }
</style>
<body>
    <h1>Routes</h1>
    <h3>Click on any header to sort routes by that category</h3>
    <table class="table table-striped table-dark table-sortable" id="routeTable">
        <thead>
            <tr>
                <th>Grade</th>
                <th>Color</th>
                <th>Rope</th>
                <th>Date put up</th>
                <th>Location</th>
                <th>Setter</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var route in Model.Routes)
            {
                <tr>
                    <td>@route.Grade</td>
                    <td>@route.Color</td>
                    <td>@route.Rope</td>
                    <td>@route.DateCreated</td>
                    <td>@route.Location</td>
                    <td>@route.Setter</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@route.RouteId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@route.RouteId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="button"
            class="btn btn-primary"
            onclick="location.href = '@Url.Action("Add", "route")'">
        Add Route
    </button>

    <script src="~/js/tablesort.js"></script>
</body>


