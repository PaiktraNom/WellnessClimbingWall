@model RoutesListViewModel


<h1>Routes</h1>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Grade</th>
            <th scope="col">Color</th>
            <th scope="col">Rope</th>
            <th scope="col">Date put up</th>
            <th scope="col">Location</th>
            <th scope="col">Setter</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var route in Model.Routes)
        {
            <tr>
                <td>@route.Grade</td>
                <td>@route.Color</td>
                <td>@route.Rope</td>
                <td>@route.DateCreated</td>
                <td>@route.Location</td>
                <td>@route.Setter</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@route.RouteId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@route.RouteId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button type="button"
        style="height:100px; width:200px; background-color:greenyellow; color:black; font-weight: bold;"
        title="Add Route" 
        class="form-control" 
        onclick="location.href = '@Url.Action("Add", "route")'"> Add Route 
</button>
