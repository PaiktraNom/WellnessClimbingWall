@model PatronListViewModel

<style>
    button {
        height: 50px;
        margin: 10px;
        width: 150px;
        background-color: aquamarine;
        color: black;
        font-weight: bold;
    }
</style>

<body style="background-color: #ededed">
    <h1>Patrons</h1>

    <div style="display: inline;" align="center">
        <div style="float: left;">
            <button type="button"
                    title="Register"
                    class="form-control">
                Check in
            </button>
        </div>
        <div style="float: right;">
            <button type="button"
                    title="Register"
                    class="form-control">
                Register Patron
            </button>
        </div>
    </div>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Time In</th>
                <th scope="col">Certifications</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patron in Model.Patrons)
            {
                <tr>
                    <td>@patron.ID</td>
                    <td>@patron.Name</td>
                    <td>@patron.TimeIn</td>
                    <td>@patron.Certifications</td>
                </tr>
            }
        </tbody>
    </table>
</body>





