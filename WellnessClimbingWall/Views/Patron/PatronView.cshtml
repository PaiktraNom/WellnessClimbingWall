@model PatronListViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var visitList = (List<Visit>)ViewData["visitList"];
}

<body style="background-color: #ededed">
    <h1>Patrons</h1>
    <!--Modal Buttons-->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#patronList"> Check in </button>
    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#registerPatron"> Register Patron </button>
    <!--Modal #1-->
    <div class="modal fade" id="patronList">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="checkIn">Check in Patron</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>x</span>
                    </button>
                </div>

                <div class="modal-body">
                    <table class="table table-striped table-dark" id="patronTable">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Certifications</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Patron patron in Model.Patrons)
                            {
                                <tr>
                                    <td>@patron.ID</td>
                                    <td>@patron.Name</td>
                                    <td>@patron.Certifications</td>
                                    <td>
                                        <!--Call CheckIn method passing in patron-->
                                        <a asp-action="CheckIn" 
                                           asp-controller="Patron" 
                                           asp-route-id="@patron.ID">
                                           Check In
                                        </a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal #2-->
    <div class="modal fade" id="registerPatron">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="checkIn">Register Patron</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>x</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label>ID</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" required>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Submit</button>
                </div>
            </div>
        </div>
    </div>


    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Time In</th>
                <th scope="col">Certifications</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patron in visitList)
            {
                <tr>
                    <td>@patron.ID</td>
                    <td>@patron.Name</td>
                    <td>@patron.timeIn</td>
                    <td>@patron.Certifications</td>
                    <td><button class="btn-danger"> Check Out </button></td>
                </tr>
            }
        </tbody>
    </table>
</body>





